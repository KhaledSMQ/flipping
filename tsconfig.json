{
  "compilerOptions": {
    "module": "ES2015",
    "declaration": true,
    "lib": ["es2015", "dom", "dom.iterable"],
    "types": ["mocha", "node"],
    "target": "es5",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "outDir": "./lib",
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}
